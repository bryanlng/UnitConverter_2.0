<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.bryan.unitconverter20.CurrencyFragment">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/currency_optionAText"
        android:hint="@string/optionsHint"
        android:inputType="numberDecimal"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/currency_optionBText"
        android:hint="@string/optionsHint"
        android:inputType="numberDecimal"
        android:layout_alignTop="@+id/currency_optionB"
        android:layout_alignParentStart="true" />
    <Spinner
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/currency_optionA"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/currency_optionAText" />
    <Spinner
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/currency_optionB"
        android:layout_below="@+id/currency_optionAText"
        android:layout_toEndOf="@+id/currency_optionAText" />

</RelativeLayout>
